from mBase import stressModelBase

class uniform(stressModelBase):
    # !!!ADDDOC

    def __init__(self,upvp_=0.0,upwp_=0.0,vpwp_=0.0):
        """
        Set the Reynold's stresses to be uniform over the rotor disk.
        """
        self.vals=[upvp_,upwp_,vpwp_]

    def __call__(self,grid,specModel):
        self.grid=grid
        self.specModel=specModel
        self.upvp_[:]=upvp_
        self.upwp_[:]=upwp_
        self.vpwp_[:]=vpwp_
        return self._setPhases()
